<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alta_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >

    <TextView
        android:text="Alta Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        style="@style/titleH1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title1"
        android:id="@+id/scrollView1">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:text="Nombre:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nombre"
                android:fontFamily="sans-serif-light"
                android:hint="Ingrese su nombre"/>

            <TextView
                android:text="Apellido:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/apellido"
                android:fontFamily="sans-serif-light"
                android:hint="Ingrese su apellido" />

            <TextView
                android:text="Nombre de Usuario:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nombreUsuario"
                android:fontFamily="sans-serif-light"
                android:hint="Ingrese su nombre de usuario" />

            <TextView
                android:text="DNI:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextDni"
                android:fontFamily="sans-serif-light"
                android:hint="Ingrese su DNI" />

            <TextView
                android:text="Nacionalidad:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv4" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                style="@style/editText"
                android:id="@+id/spinnerPaisOrigen" />

            <TextView
                android:text="Provincia:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:layout_marginTop="13dp"
                style="@style/editText"
                android:id="@+id/tv5" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                style="@style/editText"
                android:id="@+id/spinnerProvincia" />

            <TextView
                android:text="Localidad:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                style="@style/editText"
                android:id="@+id/tv6" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                style="@style/editText"
                android:id="@+id/spinnerLocalidad" />

            <TextView
                android:text="Domicilio:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv7" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/direccion"
                android:fontFamily="sans-serif-light"
                android:hint="Ingrese su dirección" />

            <TextView
                android:text="Carrera:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                style="@style/editText"
                android:id="@+id/tv9" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                style="@style/editText"
                android:id="@+id/spinnerCarrera" />

            <TextView
                android:text="Correo:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                style="@style/editText"
                android:id="@+id/tv10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/correo"
                android:fontFamily="sans-serif-light"
                android:hint="Ingrese su correo" />

            <TextView
                android:text="Ingrese su contraseña:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                style="@style/editText"
                android:id="@+id/textView14" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:id="@+id/contrasenia" />

            <TextView
                android:text="Repita su contraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                style="@style/editText"
                android:id="@+id/textView15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:fontFamily="sans-serif-light"
                android:id="@+id/contrasenia2" />

            <Button
                android:text="Guardar"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonGuardar" />

            <Button
                android:text="Volver"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVolver"/>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>