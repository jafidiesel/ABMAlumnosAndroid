<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Baja de Usuario por DNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ingrese DNI :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:textStyle="normal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/title1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/dni"
        android:hint="Ingrese el DNI.."
        android:layout_alignBaseline="@+id/title2"
        android:layout_alignBottom="@+id/title2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Dar de baja"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/botonGuardar"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/dni"
        android:layout_alignLeft="@+id/title1"
        android:layout_alignStart="@+id/title1" />

    <Button
        android:text="Volver"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/bptonvolver"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:onClick="volver"
        android:layout_alignTop="@+id/botonGuardar"
        android:layout_alignRight="@+id/title1"
        android:layout_alignEnd="@+id/title1" />

</RelativeLayout>