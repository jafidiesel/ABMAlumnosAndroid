<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ver_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:text="Ver Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        style="@style/titleH2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/dni"
        android:hint="Ingrese el DNI.."
        android:layout_alignBaseline="@+id/title2"
        android:layout_alignBottom="@+id/title2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonVolver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvInformacionAlumno"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="24sp"
            android:typeface="normal"
            android:lineSpacingExtra="8sp"
            android:textColor="@android:color/holo_blue_dark"
            />
    </ScrollView>

    <Button
        android:text="Ver"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVer"
        style="@style/buttonStyle"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/title2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp" />

    <Button
        android:text="Volver"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonVolver"
        style="@style/buttonStyle"
        android:layout_alignBaseline="@+id/buttonVer"
        android:layout_alignBottom="@+id/buttonVer"
        android:layout_toLeftOf="@+id/dni"
        android:layout_toStartOf="@+id/dni" />

    <TextView
        android:text="Ingrese DNI :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        style="@style/editText"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/title1"
        android:layout_alignLeft="@+id/buttonVolver"
        android:layout_alignStart="@+id/buttonVolver" />


</RelativeLayout>